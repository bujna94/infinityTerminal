{
  "name": "infinity-terminal",
  "version": "0.2.7",
  "private": true,
  "author": "Pavol Bujna <bujna94@gmail.com>",
  "description": "Fullscreen terminal app with two rows and endless columns",
  "main": "electron/main.js",
  "scripts": {
    "start": "node scripts/rebuild-pty.js && electron .",
    "dev": "electron .",
    "postinstall": "echo skip",
    "rebuild:pty": "node scripts/rebuild-pty.js",
    "dist": "source .env.local && electron-builder --mac",
    "dist:dmg": "source .env.local && electron-builder --mac dmg",
    "dist:zip": "source .env.local && electron-builder --mac zip",
    "dist:all": "bash -lc 'if [ -f .env.local ]; then source .env.local; fi; node scripts/patch-electron-builder.js && electron-builder --mac --linux'",
    "dist:linux": "node scripts/patch-electron-builder.js && electron-builder --linux",
    "dist:linux:clean": "rm -rf dist && node scripts/patch-electron-builder.js && electron-builder --linux",
    "dist:appimage": "node scripts/patch-electron-builder.js && electron-builder --linux AppImage",
    "dist:deb": "node scripts/patch-electron-builder.js && electron-builder --linux deb"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron": "^30.0.0"
  },
  "build": {
    "appId": "com.infinityterminal.app",
    "productName": "Infinity Terminal",
    "icon": "resources/appLogo.png",
    "files": [
      "electron/**/*",
      "src/**/*",
      "resources/**/*",
      "scripts/**/*",
      "package.json",
      "!**/node_modules/.cache/**"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "node_modules/node-pty/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/appLogoSmaller.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "This app needs to control other applications for terminal functionality.",
        "NSMicrophoneUsageDescription": "This app does not use the microphone."
      }
    },
    "dmg": {
      "backgroundColor": "#0f1117",
      "title": "Infinity Terminal Installer"
    },
    "linux": {
      "category": "Development",
      "icon": "resources/icons",
      "executableName": "infinity-terminal",
      "extraFiles": [
        {
          "from": "resources/linux/infinity-terminal.appdata.xml",
          "to": "usr/share/metainfo/infinity-terminal.appdata.xml"
        }
      ],
      "desktop": {
        "entry": {
          "Name": "Infinity Terminal",
          "Comment": "Fullscreen terminal app with two rows and endless columns",
          "Icon": "infinity-terminal"
        }
      },
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "deb": {
      "artifactName": "infinity-terminal_${version}_${arch}.${ext}"
    },
    "directories": {
      "output": "dist"
    }
  },
  "engines": {
    "node": ">=18"
  }
}
